
<div class="page-header text-center">
  <h1>Hacker News RSS Reader</h1>
</div>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="action-links">
    <ul>
      <li>
        <%= link_to "Favorites", "/favorites" %>
      </li>

      <li>
        <%= link_to "Refresh Headlines", "/headlines" %>
      </li>
    </ul>
  </div>

  <table id="feed-items" style="border-collapse:separate">
      <caption>Headlines
        <sm class="small-italics"> at <%= "#{@last_refresh_time}" %> </sm>
      </caption>

    <thead>
      <tr>
        <th>Title</th>
        <th>Published</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @entries.each_with_index do |entry, index| %>
        <%= render 'headline', entry: entry, index: index  %>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $('#feed-items').dataTable({
    "bPaginate": true,
    "bStateSave": true,

    aaSorting: [[1, 'dsc']],
    bSortable: true,

    "bInfo": true,
    "bFilter": true,
    "bAutoWidth": false,

    "aoColumns" : [
        { sWidth: '650px' },
        { sWidth: '100px' },
        { sWidth: '40px' }
    ]
  });
</script>

