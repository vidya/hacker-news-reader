<p id="notice"><%= notice %></p>

<div class="page-header text-center">
  <h1>Feed Lister</h1>
</div>

<div class="container">
  <div class="links-row">
    <ul>
      <li>
        <%= link_to "Favorites", "/favorite/index" %>
      </li>

      <li>
        <%= link_to "Refresh Headlines", "/headlines" %>
      </li>
    </ul>
  </div>

  <table id="feed-items" style="border-collapse:separate">
    <caption>Headlines</caption>

    <thead>
      <tr>
        <th>Title</th>
        <th>Published</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @entries.each_with_index do |entry, index| %>
        <%= render 'feed_item', entry: entry, index: index  %>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $('#feed-items').dataTable({
          "bPaginate": true,
          "bInfo": true,
          "bFilter": true,
          "bAutoWidth": false,
          "aoColumns" : [
              { sWidth: '650px' },
              { sWidth: '100px' },
              { sWidth: '40px' }
          ]
      });

//  $("input[type='search']").prop("padding-left", "20px")
//  $("input[type='search']").setAttribute("padding-left", "20px")
  $("input[type='search']").prop("width", "100px")

</script>

