<p id="notice"><%= notice %></p>

<div class="page-header text-center">
  <h1>Feed Lister</h1>
</div>

<div class="container">
  <div class="links-row">
    <ul>
      <li>
        <%= link_to "Headlines", "/headlines" %>
      </li>
    </ul>
  </div>

  <table id="favorite-items">
    <caption>Favorites</caption>

    <thead>
      <tr>
        <th>Title</th>
        <th>Published</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @favorites.each do |favorite| %>
        <%= render 'favorite_item', favorite: favorite %>
      <% end %>
    </tbody>
  </table>
</div>


<script>
  $('#favorite-items').dataTable({
          "bPaginate": true,
          "bInfo": true,
          "bFilter": true,
          "bAutoWidth": false,
          "aoColumns" : [
              { sWidth: '650px' },
              { sWidth: '100px' },
              { sWidth: '40px' }
          ]
      });
</script>
