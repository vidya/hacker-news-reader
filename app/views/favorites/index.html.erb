<div class="page-header text-center">
  <h1>Hacker News RSS Reader</h1>
</div>

<p id="notice"><%= notice %></p>

<div class="container">
  <div class="action-links">
    <ul>
      <li>
        <%= link_to "Headlines", "/headlines" %>
      </li>
    </ul>
  </div>

  <table id="favorite-items">
    <caption>Favorites</caption>

    <thead>
      <tr>
        <th>Title</th>
        <th>Published</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @favorites.each do |favorite| %>
        <%= render 'favorite_item', favorite: favorite %>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  $('#favorite-items').dataTable({
    "bPaginate": true,
    "bStateSave": true,

    aaSorting: [[1, 'dsc']],
    bSortable: true,

    "bInfo": true,
    "bFilter": true,
    "bAutoWidth": false,
    "aoColumns" : [
        { sWidth: '650px' },
        { sWidth: '100px' },
        { sWidth: '40px' }
    ]
  });
</script>
